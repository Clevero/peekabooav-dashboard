<% content_for :title do %>PeekabooAV Dashboard<% end %>

<div class="gridster">
  <ul>
    
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-view="Image" data-image="/peekaboo.jpg"></div>
    </li>
	
	<li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-view="Clock"></div>
      <i class="fa fa-clock-o icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="4" data-sizey="1">
		<div data-id="my-table" data-view="Table" data-title="Postfix Mailqueue" data-moreinfo="(Mails in this are currently checked against malicious behavior)"></div>
    </li>
	
	<li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="running-vms" data-view="Meter" data-title="Running VM's" data-min="0" data-max="7"></div>
    </li>
	
	<li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="reported-tasks" data-view="Meter" data-title="Reported tasks" data-min="0" data-max="1000"></div>
    </li>
	
	<li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="pending-tasks" data-view="Meter" data-title="Pending tasks" data-min="0" data-max="5"></div>
    </li>
	
	<li data-row="1" data-col="1" data-sizex="1" data-sizey="2">
      <div data-id="filetype-counts" data-view="List" data-unordered="true" data-title="Analyzed File extensions" data-moreinfo="(the most used ones since last storage reset)"></div>
    </li>
	
	<li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="known" data-view="Count" data-title="Known samples" data-moreinfo="(since last DB reset)" style="background-color:#96bf48;"></div>
      <i class="fa fa-info-circle icon-background"></i>
    </li>
	
	<li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="bad" data-view="Count" data-title="Known Bad samples" data-moreinfo="(since last DB reset)" style="background-color:#96bf48;"></div>
      <i class=""></i>
    </li>

  </ul>
</div>

